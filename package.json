{
  "name": "objection-before-and-unique",
  "version": "0.1.0",
  "author": "Rafa Mel",
  "description": "Advanced unique validation + Simpler before API/checks for Objection.js",
  "homepage": "https://github.com/rafamel/objection-before-and-unique",
  "main": "./lib/index",
  "scripts": {
    "lint": "eslint ./lib --ext .js",
    "lint:test": "eslint ./test --ext .js",
    "lint:md": "markdownlint *.md --config markdown.json",
    "beforeJest": "knex migrate:latest --knexfile=\"test/utils/db/knexfile.js\"",
    "test": "run-s lint:test beforeJest && jest ./test/.*.test.js --runInBand --verbose",
    "watch": "nodemon ./node_modules/.bin/run-s lint test",
    "checks": "run-s lint lint:* beforeJest && jest ./test/.*.test.js && npm outdated",
    "prepublishOnly": "npm run checks",
    "update:packages": "rm -rf node_modules && rm package-lock.json && npm update --save/save-dev && npm install && npm outdated"
  },
  "pre-commit": [
    "checks"
  ],
  "contributors": [
    {
      "name": "Rafa Mel"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rafamel/objection-before-and-unique"
  },
  "license": "MIT",
  "keywords": [
    "keywords",
    "keywords",
    "keywords"
  ],
  "bugs": {
    "url": "https://github.com/rafamel/objection-before-and-unique/issues"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/rafamel/objection-before-and-unique/raw/master/LICENSE"
    }
  ],
  "devDependencies": {
    "coveralls": "^3.0.0",
    "eslint": "^4.11.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.3.2",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "jest-cli": "^21.2.1",
    "knex": "^0.14.0",
    "markdownlint-cli": "^0.5.0",
    "nodemon": "^1.12.1",
    "npm-run-all": "^4.1.1",
    "objection": "^0.9.0",
    "pre-commit": "^1.2.2",
    "sqlite3": "^3.1.13"
  },
  "dependencies": {
    "joi": "^13.0.2"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "setupTestFrameworkScriptFile": "./test/utils/db/connection.js"
  }
}
