{
  "name": "objection-before-and-unique",
  "version": "0.4.0",
  "author": "Rafa Mel",
  "description": "Advanced unique validation + Simpler before checks + Final schema validation for Objection.js",
  "homepage": "https://github.com/rafamel/objection-before-and-unique",
  "main": "./lib/index",
  "scripts": {
    "prepublishOnly": "MSG='Publishing in:' npm run validate",
    "precommit": "MSG='Committing in:' npm run validate",
    "pretest": "knex migrate:latest --knexfile=\"test/db/knexfile.js\"",
    "test": "run-s lint:test && jest ./test/.*.test.js --runInBand",
    "test:watch": "nodemon -w ./test -x \"clear && npm run test\"",
    "fix": "prettier --ignore-path .gitignore --write \"*/**/*.json\" \"**/*.{js,md}\"",
    "lint": "eslint ./lib --ext .js",
    "lint:test": "eslint ./test --ext .js",
    "lint:md": "markdownlint *.md --config markdown.json",
    "validate": "run-s lint lint:md test && npm run outdated",
    "update": "npm update --save/save-dev && npm outdated",
    "outdated": "if !(npm outdated) && [ -n \"$MSG\" ]; then printf \"\n\" && for i in `seq 0 8`; do sleep 1 && printf '\r%s %2d' \"$MSG\" \"$((8-i))\"; done; fi;"
  },
  "contributors": [
    {
      "name": "Rafa Mel"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rafamel/objection-before-and-unique"
  },
  "license": "MIT",
  "keywords": [
    "objection",
    "objection.js",
    "unique",
    "validation",
    "before"
  ],
  "bugs": {
    "url": "https://github.com/rafamel/objection-before-and-unique/issues"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/rafamel/objection-before-and-unique/raw/master/LICENSE"
    }
  ],
  "devDependencies": {
    "babel-eslint": "^8.2.2",
    "coveralls": "^3.0.0",
    "eslint": "^4.18.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.12.2",
    "eslint-plugin-node": "^6.0.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "husky": "^0.14.3",
    "jest-cli": "^22.4.0",
    "knex": "0.14.2",
    "markdownlint-cli": "^0.7.1",
    "nodemon": "^1.15.1",
    "npm-run-all": "^4.1.1",
    "objection": "^1.0.0",
    "prettier": "^1.10.2",
    "sleep-promise": "^2.0.0",
    "sqlite3": "^3.1.13"
  },
  "dependencies": {
    "joi": "^13.1.2"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "setupTestFrameworkScriptFile": "./test/utils/db_connection.js"
  }
}
